{
	"source": "src",
	"destination": "build",
	"plugins": {
		"metalsmith-define": {
      "moment": "require('moment')"
    },
		"metalsmith-collections": {
			"pages": {
				"pattern": "*.md"
			},
			"posts": {
				"pattern": "posts/**/*.md",
				"sortBy": "number",
				"reverse": true
			}
		},
		"metalsmith-static": {
			"src": "assets",
			"dest": "assets"
		},
		"metalsmith-pagination": {
			"collections.posts": {
				"perPage": 6,
				"first": "posts/index.html",
				"layout": "posts.jade",
				"path": "posts/:num/index.html",
				"pageMetadata": {
					"title": "Archive"
				}
			}
		},
		"metalsmith-markdown": {
			"gfm": true,
			"tables": true
		},
		"metalsmith-permalinks": {
			"pattern": "./:collection/post-:title",
			"relative": false
		},
		"metalsmith-sass": {
			"outputDir": "stylesheets",
			"outputStyle": "expanded"
		},
		"metalsmith-uglify": {
			"order": ["js/jquery.min.js", "js/*.js"],
			"concat": "js/script.min.js",
			"removeOriginal": true
		},
		"metalsmith-layouts": {
			"engine": "jade",
			"directory": "layouts",
			"partials": "partials",
			"default": "post.jade",
			"pattern": "**/*.html"
		}
	}
}